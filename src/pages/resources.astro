---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Resources',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->
  <Hero
    tagline="Resources"
    title="Knowledge Hub"
    subtitle="Explore our collection of guides, case studies, and best practices to optimize your debt collection process"
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Free',
        href: '/signup',
        target: '_blank',
      },
      { text: 'Contact Sales', href: '/contact' },
    ]}
  />

  <!-- Latest Posts Widget *********** -->
  <BlogLatestPosts
    title="Latest Articles"
    information={`Stay up to date with the latest trends and best practices in debt collection and accounts receivable management.`}
  />

  <!-- CallToAction Widget *********** -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Get Started Free',
        href: '/signup',
        target: '_blank',
      },
      {
        text: 'Request Demo',
        href: '/demo',
        target: '_blank',
      },
    ]}
    title="Ready to optimize your collections?"
    subtitle="Join thousands of businesses already using Fynn to transform their accounts receivables."
  />
</Layout>